<div class ="col-sm-11">

  <h5 class="offset-sm-2"><span>ジャンル編集</span></h5>

  <%= form_for @genre, url: admin_genre_path do |f| %>

  <div class="er">
  <% if @genre.errors.any? %>
    <h3><%= @genre.errors.count %>error occurrence</h3>
    <ul>
  		<% @genre.errors.full_messages.each do |message| %>
  		<li><%= message %></li>
  		<% end %>
  	</ul>
  <% end %>
  </div>

  <form>
    <div class="form-group form-inline">
    	<font style="font-size:small">
      	<strong>
		      <%= f.label :ジャンル %>
		    </strong>
		  </font>
		  <%= f.text_field :name, class: "form-control ml-3" %>

  		<%= f.submit "変更を保存する", class: "btn btn-primary" %>
    </div>

  </form>
  <% end %>
</div>
