<div class="row">
  <div class="col-sm-11 offset-sm-1">
    <h5 class="ml-3"><span><%= @user.name%>さんの会員詳細</span></h5>
    <br>
    <div class="form-row">
      <div class="form-group col-sm-3">
        <p>顧客ID</p>
      </div>
      <div class="form-group col-sm-3">
        <p><%= @user.id %><span class="user-status offset-sm-1">
          <%= status(@user.is_valid) %>会員</span></p>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-sm-3">
        <p>氏名</p>
      </div>
      <div class="form-group col-sm-3">
        <p><%= @user.name%></p>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-sm-3">
        <p>メールアドレス</p>
      </div>
      <div class="form-group col-sm-3">
        <p><%= @user.email %></p>
      </div>
    </div>
    <div class="mt-3">
      <%= link_to '編集する', edit_admin_user_path(@user), class: "btn btn-primary" %>
    </div>
  </div>
</div>
