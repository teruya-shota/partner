
    <h5><span><%= @user.name %>さんの会員情報編集</span></h5>

      <div class="row">
        <div class="gruop col-sm-2">
          <p>会員ID</p>
        </div>
        <div class="group col-sm-2">
          <%= @user.id %>
        </div>
      </div>

    <%= form_for @user, url: admin_user_path do |f| %>
      <div class="form-row">
        <div class="form-gruop col-sm-2">
          <%= f.label :name, '氏名' %>
        </div>
        <div class="form-group col-sm-3">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-sm-2">
          <%= f.label :email, 'メールアドレス' %>
        </div>
        <div class="form-group col-sm-3">
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-sm-2">
          <%= f.label :is_valid, '会員ステータス' %>
        </div>
        <div class="form-group col-sm-3">
          <%= f.radio_button :is_valid, true %>  有効    <%= f.radio_button :is_valid, false %>  退会済み
        </div>
      </div>


        <%= f.submit '変更を保存する', class: "btn btn-primary" %>
    <% end %>